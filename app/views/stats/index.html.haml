%div#container

  %div.well
    %h1#stats-title Your Personal Statistics
  %div.perform-stats
    %div 
      %h2 
        Performance 
        %small today
      %hr
      
      %table.table
        %thead
          %tr
            %th Subject
            %th Accuracy (%)
            %th Question Answered
            %th Correct
        %tbody
          %tr
            %td Math
            %td
              ="#{@math_percent.to_i} %"
              %div.progress.progress-striped.active#progress-bar
                %div.bar{:style => "width: #{@math_percent}%"}
            %td
              =@math_total_answers
            %td 
              =@math_correct_answers
          %tr
            %td Critical Reading
            %td
              ="#{@cr_percent.to_i} %"
              %div.progress.progress-success.progress-striped.active#progress-bar
                %div.bar{:style => "width: #{@cr_percent}%"}
            %td 
              =@cr_total_answers
            %td 
              =@cr_correct_answers
          %tr
            %td Writing
            %td
              ="#{@writing_percent.to_i}%"
              %div.progress.progress-warning.progress-striped.active#progress-bar
                %div.bar{:style => "width: #{@writing_percent}%"}
            %td 
              =@writing_total_answers
            %td 
              =@writing_correct_answers
  
  %div.perform-stats
    %div.btn-group.subject-button
      %div.btn.btn-large.btn-primary.dropdown-toggle{"data-toggle" => "dropdown"} 
        All Subjects
        %span.caret
      %ul.dropdown-menu
        %li
          %a#math Math
        %li
          %a#CR Critical Reading
        %li
          %a#writing Writing
    %div 
      %h2 
        Performance 
        %small overall
      %hr

  %div#graph
  %div#column_stacked

