= javascript "../question_types/dynamic_question_types"
%h1 Select Category and Question Type

= form_tag({controller: "admin/materials/questions",action: "create_category_and_question_type"},method: "get") do
  %div.control-group
    = label :category_type,:category_name,"Category"
    = select :category_type,:category_name,@category_names

  %div.control-group
    = label :question_type,:type_name,"Question Type"
    = select :question_type,:type_name,QuestionType.all.collect {|question_type| [question_type.type_name, question_type.id]}

  %div
    = submit_tag "Proceed",class: "btn btn-primary"
