%h1 Question Index Page

%script{type: "text/javascript"}
  :plain
    $(document).ready(functio() {
      $(".collapse").collapse({
        toggle: false
      });
    }

%div.row
  %div.span9
  %div.span3
    %button.btn.btn-primary= link_to "Add Question",add_new_materials_question_path,class: "white-text"
    
%div.row

  %div.span3
  %div.accordion.span6{id: "accordion2"}
    %div.accordion-group
      - count=1
      - @questions.each do |question|
        %div.row
          %div.accordion-heading.text-center
            %div.span9
              %a.accordion-toggle{:"data-toggle"=>"collapse", :"data-parent"=>"#accordion2", href: "#collapse#{count}"}
                = question.title
            %div.span3
              %button.btn.btn-success Edit
              %button.btn.btn-danger Delete
        %div{id: "collapse#{count}",class: "accordion-body collapse",style: "height: 0px;"}
          %div.accordion-inner
            %div.row
              %div.span1
              %div.span5
                %span Prompt:
            %div.row.well
              %p= question.prompt.parse(question_id: question.id,is_passage: false).html_safe
              - question.choices.each do |choice|
                = check_box_tag :question,:choice,choice.correct?,disabled: true
                = choice.choice_letter+": "+choice.content
                %br
      
        - count+=1
