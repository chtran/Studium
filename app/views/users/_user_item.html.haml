%div.row-fluid
  = link_to user_profile_path(user) do
    %div.span3
      %div.thumbnail
        = image_tag(user.profile.image, class: "profile-pic")
    %div.span9
      %h4= user.name
      %div.row-fluid.user-stats
        %div.span1
          %i.icon-star-empty
        %div.span3  
          %p= "GP #{user.gp}"
        %div.span1
          %i.icon-ok
        %div.span4
          %p= "LEVEL #{user.level}"
