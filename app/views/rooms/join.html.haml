%div.row-fluid.room_settings
  %div.span8
    %h2#room_tite
      = 'Room ' + @room.title
      %small#room_mode=  @room.room_mode.title
  %div.span1
    %div#timer.pull-right{display: "inline"}
  %div.span3
    %div.row-fluid
      %div.span9
        %a.btn.btn-danger#quit Quit
      %div.span3.pull-right
        %div
          %a.btn.btn-primary#invite_button Invite

%div.row-fluid#rooms_join
  %div.span9
    %div.row-fluid.question_active#current_question
      %div.span6#paragraph.prettyprint.pre-scrollable.linenums
      %div.span6#question_container{room_id: @room.id, question_id: @room.question_id}
        %div.question_image
        %div.prompt_container
          %h4 Question
          %div.row-fluid
            %div.span2
            %div.span10
              %p.lead#prompt
      %div.span6
        %h4 Choices
        %div.row-fluid
          %div.span2
          %div.span8
            %div#choices
            %div.pull-right.control
              %a.btn.btn-primary#confirm{style: "display:none"} Confirm
              %a.btn.btn-primary#ready{style: "display:none"} Ready
  %div.span3
    %div#top_nav
    %div#bottom_nav
      %ul.nav.nav-tabs
        %li.active
          %a{"href" => "#chat", "data-toggle" => "tab"}Chat
        %li
          %a{"href" => "#history", "data-toggle" => "tab"}History
      %div.tab-content
        %div.tab-pane.active#chat
          %div.chat-content.pre-scrollable
          
          = label_tag :message
          %div.row-fluid
            %div.span12
              = text_area_tag :message,"",{class: "chat_message span12"}
          
          = submit_tag "Send",class: "btn btn-primary chat_send"
        %div.tab-pane#history.pre-scrollable
%div.modals-container
  %div.modal.hide#observing{reload: @reload}
    %div.modal-header
      %h3 Waiting...
    %div.modal-body
      %p Please wait for the next round to begin

  %div.modal.hide#quit_modal{reload: @reload}
    %div.modal-header
      %h3 Quit room
    %div.modal-body
      %p Are you sure you want to quit?
    %div.modal-footer
      =link_to "Yes, take me to the review page", room_review_path(@room.id), {class: "btn btn-primary"}
      =link_to "Yes, take me to the room list", rooms_path, {class: "btn btn-primary"}
      %a.btn{"href" =>"#", "data-dismiss" => "modal"} No

  %div.modal.hide#invite
    %div.modal-header
      %h3 Invite people to the room
    %div.modal-body
      %p
    %div.modal-footer
      %a.btn{"href" =>"#", "data-dismiss" => "modal"} Cancel
