%div.row-fluid#room_settings
  %div.span8
  %div.span1
    %a.btn.btn-danger#quit Quit
    %div.modal.hide#quit_modal{reload: @reload}
      %div.modal-header
        %h3 Quit room
      %div.modal-body
        %p Are you sure you want to quit?
      %div.modal-footer
        =link_to "Yes, take me to the review page", room_review_path, {class: "btn btn-primary"}
        =link_to "Yes, take me to the room list", rooms_path, {class: "btn btn-primary"}
        %a.btn{"href" =>"#", "data-dismiss" => "modal"} No
  %div.span1
    %div#timer.pull-right{display: "inline"}
  %div.span1
    %div
      %a.btn.btn-primary#invite_button Invite
    %div.modal.hide#invite
      %div.modal-header
        %h3 Invite people to the room
      %div.modal-body
        %p
  %div.span1
    %div#room_mode.btn.btn-info= @room.room_mode.title
%div.row-fluid#divider
  %div.span9
  %div.span3
%div.row-fluid#rooms_join
  %div.span9
    %div.row-fluid
      %div.modal.hide#observing{reload: @reload}
        %div.modal-header
          %h3 Waiting...
        %div.modal-body
          %p Please wait for the next round to begin
      %div.span5#paragraph.prettyprint.pre-scrollable.linenums
      %div.span5#question_container{room_id: @room.id, question_id: @room.question_id}
        %div.prompt_container#current_question.question_active
          %h4 Question
          %div.row-fluid
            %div.span2
            %div.span10
              %p.lead#prompt
          %div.row-fluid.choices_container
            %h4 Choices
            %div.row-fluid
              %div.span2
              %div.span8
                %div#choices
          %div.pull-right
            %a.btn.btn-primary#confirm{style: "display:none"} Confirm
            %a.btn.btn-primary#ready{style: "display:none"} Ready
  %div.span3
    %div#top_nav
    %div#bottom_nav
      %ul.nav.nav-tabs
        %li
          %a{"href" => "#chat", "data-toggle" => "tab"}Chat
        %li.active
          %a{"href" => "#history", "data-toggle" => "tab"}History
      %div.tab-content
        %div.tab-pane#chat
          %div.chat-content
          
          = label_tag :message
          = text_area_tag :message,"",{class: "chat_message"}
          
          = submit_tag "Send",class: "btn btn-primary chat_send"
        %div.tab-pane#history.active.pre-scrollable
