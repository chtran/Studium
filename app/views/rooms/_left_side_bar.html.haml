%div.span3
  %div#profile
    %div.row-fluid
      %table.table.table-bordered
        %tbody
          %tr
            %td{:colspan => '3'}
              %div.span4
                - if current_user.profile.image
                  = image_tag(current_user.profile.image, class: "profile-pic")
              %div.span8
                %h3= current_user.name
                %small= link_to "View my profile","/users/#{current_user.id}/profile"
          %tr
            %td 
              %strong #{current_user.gp}
              %small GP
            %td 
              %strong #{current_user.level}
              %small Level
          %tr
            %td
              %strong #{current_user.reputation}
              %small Reputation
            %td 
              %strong #{current_user.rank}
              %small Rank
  
  %div.separator

  %div.bordered-container#ranking
    %div.myhead
      %h3 Ranking
    %div
      %table.table
        %thead
        %tbody
          - top_users.each do |user|
            %tr
              %td.row-fluid.user_component
                %div.span5.row-fluid
                  %div.span4
                    %h2= "##{user.rank}"
                  %div.span8
                    = image_tag(user.profile.image,:class => "profile-pic")
                %div.span7
                  %a{href:"/users/#{user.id}/profile"}
                    %h4= user.name
                  %div.user-stats.row-fluid
                    %div.span2
                      %i.icon-star-empty
                    %div.span8
                      %p= "GP #{user.gp}"
