%div.row-fluid#rooms_index
  = render "left_side_bar", top_users: @top_users
  %div.span5
    %div.accordion#room_list

    %div.bordered-container
      %div.online-users-head
        %h4 Online Users
      %div.online-users-body
        %div
          %div.thumbnail.thumbnail-profile-pic
            = image_tag current_user.profile.image, :class => "profile-pic"
      %div.friends-head
        %h4 Friends
      %div.online-users-body
        %div
          %div.thumbnail.thumbnail-profile-pic
            = image_tag current_user.profile.image, :class => "profile-pic"         

    %br
    %div.modal.hide#new_room
      %div.modal-header
        %button.close{"type" => "button", "data-dismiss" => "modal"}x
        %h3 Create new room
      %div.modal-body
        =render "new"
    %div.modal.hide#invitation
      %div.modal-header
        %button.close{"type" => "button", "data-dismiss" => "modal"}x
        %h3 You're invited!
      %div.modal-body
        %p
      %div.modal-footer
        %button.btn{"data-dismiss"=>"modal"}Decline
        %button.btn.btn-primary#accept Accept

  = render "right_side_bar"

