%div.row-fluid#rooms_index
  %div.span3
    %div#profile
    %div#friend_list
      %h3 Friends
      = render "friend_list", friends: @friends   

  %div.span6
    %div.accordion.text-center#room_list
    %br
    %a.btn.btn-primary{"data-toggle"=>"modal", "href"=>"#new_room"}New room
    %div.modal.hide#new_room
      %div.modal-header
        %button.close{"type" => "button", "data-dismiss" => "modal"}x
        %h3 Create new room
      %div.modal-body
        =render "new"
    %div.modal.hide#invitation
      %div.modal-header
        %button.close{"type" => "button", "data-dismiss" => "modal"}x
        %h3 You're invited!
      %div.modal-body
        %p
      %div.modal-footer
        %a.btn{"data-dismiss"=>"modal"}Reject
        %a.btn.btn-primary#accept Accept
  %div.span3
    %div#recent_activities
      %h3 Recent Activities
      = render "recent_activities" 
    
    %div#ranking
      %h3 Ranking
      = render "friend_list", friends: @friends
