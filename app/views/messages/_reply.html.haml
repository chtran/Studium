= form_for @reply,remote: true do |f|
  %fieldset
    %div.control-group
      = hidden_field_tag :receiver_id,@receiver_id 

    %div.form-actions
      %div.control-group    
        %div.controls
          = f.text_area :body, class: "my-text-area reply-body", rows: "3", id: "input-body"
        = f.submit 'Reply', class: "btn btn-primary reply-message"

